<section class="users_index">
  <br><br><br><br><br>

  <div class="users">
<% @users.each do |user| %>
  <div class="user">
  <%= image_tag  user.cl_image_url,width:400,class: "icon_image" %>
  <p><%=link_to user.name, user_path(user.id) %></p>

  <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
          <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
      <% else %>
          <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
      <% end %>
  <% end %>
<% end %>
  </div>
  <br><br><br><br><br>
</section>
