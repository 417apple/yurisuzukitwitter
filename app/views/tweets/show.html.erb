<section class="tweets_show">
  <br><br><br><br><br>

  <div class="container">
    <div class="item"><img src=<%= @user.cl_image %> class = "icon_image"></div>
    <div class="item">  <%=link_to @user.name, user_path(@user.id) %><br>
  <%= @tweet.body %><br>
  <%= image_tag  @tweet.cl_image_url,width:600 %><br>
  <% if user_signed_in? %>
  <% if @tweet.favorited_by?(current_user) %>
      <p><span>お気に入り解除: </span><%=link_to @tweet.favorites.count, tweet_favorites_path(@tweet.id), method: :delete %></p>
  <% else %>
      <p><span>お気に入り登録: </span><%=link_to @tweet.favorites.count, tweet_favorites_path(@tweet.id), method: :post %></p>
  <% end %>
<% else %>
  <p><span>お気に入り数: </span><%= @tweet.favorites.count %></p>
<% end %><br>
<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <%= c.body %>
    <hr>
  </div>
<% end %>

<%= form_for [@tweet, @comment] do |f| %>
  <%= f.text_field :body %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>
<br><br><br><br><br>

</section>
